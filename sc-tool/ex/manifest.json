{
    "manifest_version": 2,
    "name": "ViewerViewer",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [
        "browsingData",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "nativeMessaging",
        "activeTab",
        "declarativeContent",
        "storage",
        "tabs",
        "clipboardRead",
        "clipboardWrite",
        "http://*/",
        "https://*/",
        "webRequestHeaders",
        "extraHeaders",
        "<all_urls>",
        "cookies",
        "background",
        "scripting",
        "declarativeNetRequest",
        "downloads",
        "fileSystem",
        "fileSystem.write",
        "downloads.shelf",
        "downloads.open",
        "windows",
        "<all_urls>",
        "http://localhost:2000/*"
    ],
    "web_accessible_resources": ["videos/a1.mp4"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content-scripts/gpu.js",
                "utils.js",
                "user_utils.js",
                "user_simulate.js",
                "user_login.js",
                "watch_youtube.js",
                "watch_youtube_mobile.js",
                "content.js",
                "./scripts/search.js",
                "./scripts/google_news.js",
                "./scripts/youtube_sub.js",
                "./scripts/brave.js",
                "./scripts/youtube_comment.js",
                "./scripts/youtube_like.js",
                "./scripts/create_playlist.js",
                "./scripts/add_video_playlist.js",
                "./scripts/reg_mail.js",
                "./scripts/check_mail_1.js",
                "./scripts/direct_link.js",
                "./scripts/createYoutubeKey.js",
                "./scripts/getYoutubeKey.js",

                "./google_script/channel_appeal.js",
                "./google_script/map.js",
                "./google_script/change_name.js",
                "./google_script/create_backup_codes.js",
                "./google_script/delete_backup_codes.js",
                "./fb_scripts/utilFB.js",
                "./fb_login.js",
                "./fb_scripts/reg_page.js",
                "./fb_scripts/like_page.js",
                "./fb_scripts/like_post.js",
                "./fb_scripts/comment_post.js",
                "./fb_scripts/view_fb_video.js",
                "./fb_scripts/folow_page.js",
                "./fb_scripts/change_pass.js",
                "./fb_scripts/post_fb.js",
                "./fb_scripts/scan_group.js",
                "./fb_scripts/scan_profile.js",
                "./fb_scripts/fb_add_member.js",
                "./fb_scripts/fb_add_friend.js",
                "./fb_scripts/view_fb_home.js",
                "./fb_scripts/fb_feed.js",
                "./fb_scripts/fb_spam_fb_account.js",
                "./fb_scripts/fb_create_story.js",
                "./fb_scripts/scan_page.js",
                "./fb_scripts/fb_comment_group.js",
                "./tiktok_scripts/reg_tiktok.js",
                "./tiktok_scripts/tiktok_comment.js",
                "./tiktok_scripts/tiktok_feed.js",
                "./tiktok_scripts/tiktok_login.js",
                "./tiktok_scripts/tiktok_update_info.js",
                "./system_scripts/get_otp.js",
                "./system_scripts/add_recovery_mail.js",
                "./system_scripts/check_recovery.js",
                "./system_scripts/unsub_youtube.js",
                "./youtube_script/youtube_khang_kenh_youtube.js",
                "./youtube_script/threeStepVerification.js",
                "./youtube_script/create_channel_youtube.js",
                "./google_script/create_2fa.js",
                "./google_script/change_2fa.js",
                "./google_script/verify_phone.js",
                "./chatgpt_login.js"
            ]
        },
        {
            "matches": ["https://payments.google.com/*"],
            "js": [
                "utils.js",
                "user_utils.js",
                "user_simulate.js",
                "user_login.js",
                "watch_youtube.js",
                "watch_youtube_mobile.js",
                "content.js"
            ],
            "all_frames": true
        }
    ]
}
