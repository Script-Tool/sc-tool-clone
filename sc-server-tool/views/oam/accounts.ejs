<!DOCTYPE html>
<html lang="en">
  <% include ../common/header%>

  <body id="page-top">
    <div class="abstract-bg"></div>
    <div class="grid-pattern"></div>
    <div class="abstract-shape w-96 h-96 top-1 left-1"></div>
    <div class="abstract-shape w-96 h-96 bottom-1 right-1"></div>
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <% include ../common/sidebar.ejs%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <br />
            <!-- Page Heading -->
            <div class="premium-stats rounded-xl shadow-sm my-2 p-3">
              <div class="d-flex align-items-center justify-content-between">
                <!-- Title - Giữ nguyên logic gốc -->
                <h1 class="font-weight-bold h3 mb-0 text-gray-800 primary-text">
                  PROFILE
                </h1>

                <!-- Action Buttons - Giữ nguyên logic, chỉ thay đổi style -->
                <div class="flex space-x-2">
                  <button
                    id="importProfileBtn"
                    type="button"
                    data-toggle="modal"
                    data-target="#importProfileModal"
                    class="ultra-button inline-flex items-center px-3 py-1.5 text-sm rounded border border-blue-500/20 bg-blue-500/10 text-blue-400 transition-all hover:bg-blue-500/20"
                  >
                    <i class="fas fa-upload fa-sm mr-1"></i>Import
                  </button>

                  <button
                    type="button"
                    id="deleteAll"
                    class="ultra-button inline-flex items-center px-3 py-1.5 text-sm rounded border border-red-500/20 bg-red-500/10 text-red-400 transition-all hover:bg-red-500/20"
                  >
                    <i class="fas fa-trash fa-sm mr-1"></i>Delete
                  </button>

                  <button
                    type="button"
                    id="exportBTN"
                    class="ultra-button inline-flex items-center px-3 py-1.5 text-sm rounded border border-slate-500/20 bg-slate-500/10 text-slate-400 transition-all hover:bg-slate-500/20"
                  >
                    <i class="fas fa-download fa-sm mr-1"></i>Export
                  </button>
                </div>
              </div>
            </div>

            <!-- Content Row -->
            <div class="row">
              <!-- Earnings (Monthly) Card Example -->
              <div class="col-xl-2 col-md-4 mb-4">
                <div class="shadow h-100 py-2">
                  <div
                    class="card-body premium-stats rounded-xl border-left-primary"
                  >
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-primary text-uppercase mb-1"
                        >
                          Gmail
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%=info.gmail%>
                        </div>
                      </div>
                    </div>
                    <!-- Shine effect element -->
                    <div class="shine-effect"></div>
                  </div>
                </div>
              </div>

              <!-- Earnings (Monthly) Card Example -->
              <div class="col-xl-2 col-md-4 mb-4">
                <div class="h-100 py-2 shadow">
                  <div
                    class="card-body premium-stats rounded-xl border-left-success"
                  >
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-success text-uppercase mb-1"
                        >
                          Facebook
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%=info.active%>
                        </div>
                      </div>
                    </div>
                    <!-- Shine effect element -->
                    <div class="shine-effect"></div>
                  </div>
                </div>
              </div>

              <!-- Earnings (Monthly) Card Example -->
              <div class="col-xl-2 col-md-4 mb-4">
                <div class="shadow h-100 py-2">
                  <div
                    class="card-body premium-stats rounded-xl border-left-danger"
                  >
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-info text-uppercase mb-1"
                        >
                          Tiktok
                        </div>
                        <div class="row no-gutters align-items-center">
                          <div class="col-auto">
                            <div
                              class="h5 mb-0 mr-3 font-weight-bold text-gray-800"
                            >
                              <%=info.error%>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-auto">
                        <i class="fas fa-2x text-gray-300"></i>
                      </div>
                    </div>
                    <!-- Shine effect element -->
                    <div class="shine-effect"></div>
                  </div>
                </div>
              </div>

              <div class="col-xl-2 col-md-4 mb-4">
                <div class="shadow h-100 py-2">
                  <div
                    class="card-body premium-stats rounded-xl border-left-warning"
                  >
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-warning text-uppercase mb-1"
                        >
                          Shoppe
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%=info.suspend%>
                        </div>
                      </div>
                    </div>
                    <!-- Shine effect element -->
                    <div class="shine-effect"></div>
                  </div>
                </div>
              </div>

              <!-- Pending Requests Card Example -->
              <div class="col-xl-2 col-md-4 mb-4">
                <div class="shadow h-100 py-2">
                  <div
                    class="card-body premium-stats rounded-xl border-left-gray"
                  >
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-gray text-uppercase mb-1"
                        >
                          Twitter
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%=info.not_ready%>
                        </div>
                      </div>
                    </div>
                    <!-- Shine effect element -->
                    <div class="shine-effect"></div>
                  </div>
                </div>
              </div>

              <div class="col-xl-2 col-md-4 mb-4">
                <div class="border-left-gray shadow h-100 py-2">
                  <div class="card-body premium-stats rounded-xl">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="text-xs font-weight-bold text-gray text-uppercase mb-1"
                        >
                          Lazada
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                          <%=info.reset%>
                        </div>
                      </div>
                    </div>

                    <!-- Shine effect element -->
                    <div class="shine-effect"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->

          <div class="mb-4 flex items-end justify-between px-3">
            <!-- Filter Controls -->
            <div class="flex space-x-4">
              <!-- Type Select -->
              <div class="flex flex-col">
                <label
                  for="account-type"
                  class="mb-2 text-sm font-medium text-slate-200"
                  >Type</label
                >
                <select
                  id="account-type"
                  class="form-control rounded-lg border border-slate-200/10 px-3 py-2 text-sm text-slate-200 shadow-sm backdrop-blur-sm focus:border-blue-500/50 focus:outline-none focus:ring-1 focus:ring-blue-500/50"
                >
                  <option value="">All</option>
                  <option value="gmail">Gmail</option>
                  <option value="facebook">Facebook</option>
                  <option value="tiktok">Tiktok</option>
                </select>
              </div>

              <!-- Created Time Input -->
              <div class="flex flex-col">
                <label
                  for="account-created-time"
                  class="mb-2 text-sm font-medium text-slate-200"
                  >Created time (Minutes)</label
                >
                <input
                  type="number"
                  id="account-created-time "
                  class="form-control w-[200px] rounded-lg border border-slate-200/10 px-3 py-2 text-sm text-white shadow-sm backdrop-blur-sm focus:border-blue-500/50 focus:outline-none focus:ring-1 focus:ring-blue-500/50"
                />
              </div>

              <!-- Count & Search Button -->
              <div class="flex flex-col">
                <label class="mb-2 text-sm font-medium text-emerald-400"
                  ><%=count%> records</label
                >
                <button
                  id="searchBtn"
                  type="button"
                  class="inline-flex items-center justify-center rounded-lg border border-slate-200/10 bg-slate-800/40 px-4 py-2 text-sm font-medium text-slate-200 shadow-sm backdrop-blur-sm transition-colors hover:bg-slate-700/40 focus:outline-none"
                >
                  <i class="fas fa-search fa-sm mr-2"></i>
                  Search
                </button>
              </div>
            </div>

            <!-- Pagination -->
            <nav>
              <ul
                class="flex rounded-lg border border-slate-200/10 bg-slate-800/40 text-sm font-medium backdrop-blur-sm"
              >
                <li id="pre_page">
                  <a
                    href="#"
                    class="inline-flex h-8 items-center justify-center rounded-l-lg border-r border-slate-200/10 px-3 text-slate-200 hover:bg-slate-700/40"
                  >
                    <i class="fas fa-chevron-left fa-sm"></i>
                  </a>
                </li>
                <li>
                  <a
                    href="#"
                    class="inline-flex h-8 items-center justify-center border-r border-slate-200/10 px-3 text-slate-200"
                  >
                    <%=current_page%>
                  </a>
                </li>
                <li id="next_page">
                  <a
                    href="#"
                    class="inline-flex h-8 items-center justify-center rounded-r-lg px-3 text-slate-200 hover:bg-slate-700/40"
                  >
                    <i class="fas fa-chevron-right fa-sm"></i>
                  </a>
                </li>
              </ul>
            </nav>
          </div>

          <div
            class="relative overflow-hidden rounded-lg border border-slate-200/10 bg-slate-800/40 shadow-md backdrop-blur-xl mx-3"
          >
            <div class="overflow-x-auto">
              <table
                class="w-full table-auto badge-soft-dark"
                id="playlistTable"
              >
                <thead class="bg-slate-900/50">
                  <tr>
                    <th
                      class="px-4 py-3 text-left text-sm font-medium text-slate-200"
                    >
                      Username
                    </th>
                    <th
                      class="px-4 py-3 text-left text-sm font-medium text-slate-200"
                    >
                      Password
                    </th>
                    <th
                      class="px-4 py-3 text-left text-sm font-medium text-slate-200"
                    >
                      Verify
                    </th>
                    <th
                      class="px-4 py-3 text-left text-sm font-medium text-slate-200"
                    >
                      Proxy server
                    </th>
                    <th
                      class="px-4 py-3 text-center text-sm font-medium text-slate-200"
                    >
                      Type
                    </th>
                    <th
                      class="px-4 py-3 text-left text-sm font-medium text-slate-200"
                    >
                      Note
                    </th>
                    <th
                      class="px-4 py-3 text-center text-sm font-medium text-slate-200"
                    >
                      Created At
                    </th>
                    <th
                      class="px-4 py-3 text-center text-sm font-medium text-slate-200"
                    >
                      Action
                    </th>
                  </tr>
                </thead>
                <tbody class="">
                  <% accounts.forEach(function(account){ %>
                  <tr class="transition-all hover:bg-slate-700/30">
                    <td class="px-4 py-3">
                      <span class="text-slate-200"><%=account.username%></span>
                    </td>

                    <td class="px-4 py-3">
                      <span class="text-slate-200"><%=account.password%></span>
                    </td>

                    <td class="px-4 py-3">
                      <span class="text-slate-200"><%=account.verify%></span>
                    </td>

                    <td class="px-4 py-3">
                      <span class="text-slate-200"
                        ><%=account.proxy_server%></span
                      >
                    </td>

                    <td class="px-4 py-3 text-center">
                      <span
                        class="inline-flex rounded border border-blue-500/20 bg-blue-500/10 px-2 py-1 text-xs text-blue-400"
                      >
                        <%=account.type%>
                      </span>
                    </td>

                    <td class="px-4 py-3">
                      <span class="text-slate-200"><%=account.note%></span>
                    </td>

                    <td class="px-4 py-3 text-center">
                      <span
                        class="inline-flex rounded border border-slate-500/20 bg-slate-500/10 px-2 py-1 text-xs text-slate-400"
                      >
                        <%=account.createdAt%>
                      </span>
                    </td>

                    <td class="px-4 py-3 text-center">
                      <div class="flex items-center justify-center space-x-2">
                        <!-- Action buttons can be added here -->
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- End of Main Content -->

        <% include ../common/footer%>
      </div>
      <!-- End of Content Wrapper -->

      <div
        id="importProfileModal"
        class="modal fade bd-example-modal-xl"
        tabindex="-1"
        role="dialog"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-xl" role="document">
          <div class="modal-content bg-glass">
            <div class="modal-header">
              <a
                href="/oam/download?file=profile_template.csv"
                class="text-gray-400"
                >Account template (email, pass, recovery_email, type)</a
              >
              <button
                type="button"
                class="close text-white"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="profileImportForm">
                <div class="form-group">
                  <label for="exampleFormControlFile1" class="text-gray-400"
                    >Account file</label
                  >
                  <input
                    type="file"
                    class="form-control-file"
                    id="profileFile"
                    name="file"
                    accept=".csv"
                  />
                </div>
              </form>
              <table id="previewTable" class="table table-bordered"></table>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
              <button type="button" class="btn btn-primary" id="saveBtn">
                Save changes
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End of Page Wrapper -->

    <% include ../common/js%>
    <script src="/js/bootbox.all.min.js"></script>
    <script src="https://unpkg.com/papaparse@latest/papaparse.min.js"></script>
    <script src="/javascripts/accounts.js"></script>
    <script src="/javascripts/utils.js"></script>
  </body>
</html>
