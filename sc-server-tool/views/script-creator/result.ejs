<style>
  /* width */
  ::-webkit-scrollbar {
    width: 2x;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #8685EF; 
  }
  
  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #8685EF; 
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #8685EF; 
  }

  .video img{
    width: 350px;
    height: 250px;
  }

  .wrap-form{
    width: fit-content;
    padding-top: 3em;
    text-align: center;
    width: 100%;
  }
  .textarea{
    width: 100% !important;
    min-height: 400px;
  }
  .list-videos{
    display: flex;
    justify-content: space-between;
    display: flex;
    overflow-x: scroll;
  }
  .video-item{
    color: white;
    padding: 10px;
  }
  .video-item .video{
    border: 1px solid #fff;
    width: 100%;
  }
  .video-item .video-title{
    margin-top: 10px;
    text-align: left;
    font-size: 18px;
  }
  .video-item .video-info{
    text-align: left;
    font-size: 16px;
    display: flex;
  }
</style>
